@if (Settings != null && Garden != null)
{
    <svg preserveAspectRatio="none" width="40" height="@Settings.SvgHeight" viewBox="@Settings.StartX @Settings.StartY 45 @Settings.ViewBoxY">
        <g id="tick-groups">
            <line x1="0" y1="0" x2="0" y2="@Settings.SvgHeight" stroke="#000000" stroke-width="1"></line>

            @for (int i = 0; i <= Garden.Length; i++)
            {
                <line x1="0" y1="@(i*GardenPlanSettings.TickFootHeight)" x2="@Settings.TickLength" y2="@(i*GardenPlanSettings.TickFootHeight)" stroke="#000000" stroke-width="1"></line>
            }

            <text x="8" y="10" class="label" fill="#000000" stroke-width="1">ft</text>

            @for (int i = 1; i <= Garden.Length; i++)
            {
                <text><text x="8" y="@(10+i*GardenPlanSettings.TickFootHeight) " class="label" fill="#000000" stroke-width="1">@i</text></text>
            }                 
        </g>
        <g id="division-tick-groups" stroke="#000000">
            @for (int i = 0; i <= Garden.Length * 12; i++)
            {
                <line x1="0" y1="@(i*@Settings.TickInchHeight)" x2="@Settings.DivisionLength" y2="@(i*@Settings.TickInchHeight)"></line>
            }
        </g>    
    </svg>
}
@code {
    [Parameter] public GardenModel? Garden { get; set; }

    [Parameter] public GardenPlanSettings? Settings { get; set; }

}        


